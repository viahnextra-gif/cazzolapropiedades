<%- include('../layout', { body: `
  <h1>Painel — Imóveis</h1>

  <a href="/admin/properties/new" class="btn btn-success mb-4">Novo Imóvel</a>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Título</th>
        <th>Local</th>
        <th>Preço</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      ${properties.map(p => `
        <tr>
          <td>${p.title}</td>
          <td>${formatLocation(p)}</td>
          <td>$${p.price}</td>
          <td>${p.status}</td>
        </tr>
      `).join('')}
    </tbody>
  </table>
` }) %>
