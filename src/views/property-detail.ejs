<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include('partials/header', { title: property.title + ' | Cazzola Propiedades' }) %>
  </head>
  <body>
    <div class="container py-5">
      <a href="/properties" class="btn btn-link mb-3">← Voltar</a>
      <div class="row g-4">
        <div class="col-lg-7">
          <div class="card">
            <% if (property.images && property.images.length) { %>
            <img src="<%= property.images[0] %>" class="card-img-top" alt="Foto do imóvel" />
            <% } else { %>
            <div class="placeholder-image">Galeria do imóvel</div>
            <% } %>
            <% if (property.images && property.images.length > 1) { %>
            <div class="card-body">
              <div class="d-flex flex-wrap gap-2">
                <% property.images.slice(1).forEach(function(img){ %>
                <img src="<%= img %>" class="thumb" alt="Imagem" />
                <% }) %>
              </div>
            </div>
            <% } %>
          </div>
        </div>
        <div class="col-lg-5">
          <h1 class="h3 mb-2"><%= property.title %></h1>
          <p class="text-muted mb-2">Tipo: <%= property.type %> · Status: <%= property.status %></p>
          <p class="h4 text-primary mb-3">$<%= property.price.toLocaleString('pt-BR') %></p>
          <p class="mb-2"><i class="bi bi-geo-alt"></i> <%= formatLocation(property) %> · <%= property.address %></p>
          <p class="mb-3">
            <%= property.bedrooms || 0 %> quartos · <%= property.bathrooms || 0 %> banheiros · <%= property.area || 0 %>m²
          </p>
          <p><%= property.description || 'Descrição em breve.' %></p>
          <div class="mt-3">
            <a class="btn btn-primary" href="/contato">Quero mais informações</a>
          </div>
        </div>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
