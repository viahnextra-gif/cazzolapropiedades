<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <%- include('partials/header', { title: 'Blog | Cazzola Propiedades' }) %>
  </head>
  <body>
    <section class="py-5">
      <div class="container">
        <h1 class="h3 fw-bold mb-4">Blog Cazzola</h1>
        <div class="row g-4">
          <% if (!posts.length) { %>
          <p class="text-muted">Nenhum post publicado ainda.</p>
          <% } %>
          <% posts.forEach((post) => { %>
          <div class="col-12 col-md-6">
            <div class="card h-100 shadow-sm">
              <div class="card-body">
                <p class="text-muted small mb-1"><%= post.date %></p>
                <h2 class="h5 fw-bold"><%= post.title %></h2>
                <p class="text-muted"><%= post.summary %></p>
                <a href="#" class="btn btn-sm btn-outline-primary">Ler mais</a>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </section>
    <%- include('partials/footer') %>
  </body>
</html>
