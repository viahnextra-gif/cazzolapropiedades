# String de conexão do MongoDB (use Mongo Atlas ou instância própria)
MONGODB_URI=mongodb+srv://SEU_USUARIO:SUA_SENHA@SEU_CLUSTER.mongodb.net/cazzola?retryWrites=true&w=majority

# Chave para assinar JWTs (substitua por valor seguro em produção)
JWT_SECRET=altere-para-um-valor-seguro

# Porta que a aplicação irá escutar (Railway pode definir automaticamente)
PORT=3000

# Ambiente de execução: development | production
NODE_ENV=development

# Lei de privacidade padrão e contato do DPO
DEFAULT_LAW=lgpd_br
DPO_EMAIL=dpo@example.com

# Nome amigável da aplicação (usado em logs ou templates)
APP_NAME=Cazzola Propiedades

# URL base da aplicação (ajuste conforme o ambiente)
APP_URL=http://localhost:3000
